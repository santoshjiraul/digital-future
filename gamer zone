    <script>
        /* --- GLOBAL VARIABLES --- */
        let currentUser = localStorage.getItem('gameUser');
        let currentView = 'auth-view';

        /* --- NAVIGATION & AUTH --- */
        function checkAuth() {
            if (currentUser) {
                document.getElementById('headerUserInfo').style.display = 'flex';
                document.getElementById('displayUsername').innerText = currentUser;
                showView('dashboard-view');
            } else {
                document.getElementById('headerUserInfo').style.display = 'none';
                showView('auth-view');
            }
        }

        function handleLogin(e) {
            e.preventDefault();
            currentUser = document.getElementById('username').value;
            localStorage.setItem('gameUser', currentUser);
            showToast("Welcome " + currentUser);
            checkAuth();
        }

        function logout() {
            localStorage.removeItem('gameUser');
            location.reload();
        }

        function showView(viewId) {
            // Hide all
            document.querySelectorAll('.section').forEach(s => {
                s.style.display = 'none';
                s.classList.remove('active');
            });

            // Show target
            const target = document.getElementById(viewId);
            target.style.display = 'block'; // Need to set display block before animating opacity
            setTimeout(() => target.classList.add('active'), 10);
            
            currentView = viewId;

            // Performance Management: Pause games not in use
            if(viewId === 'snake-view') startSnakeLoop(); else stopSnakeLoop();
            if(viewId === 'voxel-view') startVoxelLoop(); else stopVoxelLoop();
        }

        function showToast(msg) {
            const t = document.getElementById("toast");
            t.innerText = msg; t.className = "show";
            setTimeout(() => t.className = t.className.replace("show", ""), 3000);
        }

        /* --- GAME 1: TIC TAC TOE --- */
        function initTicTacToe() {
            const board = document.getElementById('ttt-board');
            const status = document.getElementById('ttt-status');
            let xTurn = true; let active = true; let state = Array(9).fill('');
            
            board.innerHTML = '';
            state.forEach((_, i) => {
                const cell = document.createElement('div');
                cell.className = 'cell';
                cell.onclick = () => {
                    if(!active || state[i]) return;
                    state[i] = xTurn ? 'X' : 'O';
                    cell.innerText = state[i];
                    cell.classList.add(state[i].toLowerCase());
                    xTurn = !xTurn;
                    if(checkWin(state)) { status.innerText = (xTurn?'O':'X')+" Wins!"; active = false; }
                    else if(!state.includes('')) { status.innerText = "Draw!"; active = false; }
                    else status.innerText = "Player " + (xTurn?'X':'O');
                };
                board.appendChild(cell);
            });
            status.innerText = "Player X";
        }
        function checkWin(s) {
            const wins = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];
            return wins.some(c => s[c[0]] && s[c[0]]===s[c[1]] && s[c[1]]===s[c[2]]);
        }

        /* --- GAME 2: SNAKE --- */
        let snakeInt;
        const sCanvas = document.getElementById('snakeCanvas');
        const sCtx = sCanvas.getContext('2d');
        let snake = [{x:10, y:10}]; let food = {x:15, y:15}; let d=null; let score=0;
        
        function startSnake() {
            snake = [{x:10,y:10}]; score=0; d=null;
            document.addEventListener('keydown', sDir);
            startSnakeLoop();
        }
        function sDir(e) { if([37,38,39,40].includes(e.keyCode)) { if(d==='LEFT' && e.keyCode===39) return; /* prevent reverse */ d=['UP','DOWN','LEFT','RIGHT'][[38,40,37,39].indexOf(e.keyCode)]; } }
        function startSnakeLoop() {
            if(snakeInt) clearInterval(snakeInt);
            snakeInt = setInterval(() => {
                if(!d) return;
                let head = {...snake[0]};
                if(d==='UP') head.y--; if(d==='DOWN') head.y++; if(d==='LEFT') head.x--; if(d==='RIGHT') head.x++;
                
                if(head.x<0||head.x>=30||head.y<0||head.y>=30||snake.some(p=>p.x===head.x&&p.y===head.y)) { clearInterval(snakeInt); alert("Game Over"); return; }
                
                snake.unshift(head);
                if(head.x===food.x && head.y===food.y) { score++; food = {x:Math.floor(Math.random()*30), y:Math.floor(Math.random()*30)}; }
                else snake.pop();
                
                sCtx.fillStyle='black'; sCtx.fillRect(0,0,300,300);
                sCtx.fillStyle='lime'; snake.forEach(p=>sCtx.fillRect(p.x*10, p.y*10, 9, 9));
                sCtx.fillStyle='red'; sCtx.fillRect(food.x*10, food.y*10, 9, 9);
                document.getElementById('snake-score').innerText = score;
            }, 100);
        }
        function stopSnake() { clearInterval(snakeInt); document.removeEventListener('keydown', sDir); }
        function stopSnakeLoop() { clearInterval(snakeInt); }

        /* --- GAME 3: MEMORY --- */
        function initMemory() {
            const icons = ['üçé','üçå','üçá','üçâ','üçí','üçì','üçç','ü•ù'];
            const cards = [...icons, ...icons].sort(() => 0.5-Math.random());
            const board = document.getElementById('mem-board');
            board.innerHTML = ''; let flipped = []; let moves = 0; let lock = false;
            
            cards.forEach(icon => {
                const el = document.createElement('div');
                el.className = 'memory-card';
                el.innerHTML = `<div class="front-face">?</div><div class="back-face">${icon}</div>`;
                el.onclick = () => {
                    if(lock || el.classList.contains('flip')) return;
                    el.classList.add('flip'); flipped.push(el);
                    if(flipped.length===2) {
                        lock = true; moves++;
                        document.getElementById('mem-moves').innerText = moves;
                        if(flipped[0].querySelector('.back-face').innerText === flipped[1].querySelector('.back-face').innerText) {
                            flipped = []; lock = false;
                        } else {
                            setTimeout(() => { flipped.forEach(c=>c.classList.remove('flip')); flipped = []; lock = false; }, 1000);
                        }
                    }
                };
                board.appendChild(el);
            });
        }

        /* --- GAME 4: VOXEL CRAFT 3D (Three.js) --- */
        let scene, camera, renderer, voxelInt;
        let vVelocity = new THREE.Vector3();
        let vMove = {f:false, b:false, l:false, r:false};
        let vCanJump = false;
        let vColor = 0x567d46;
        let vObjects = [];
        let vRaycaster = new THREE.Raycaster();

        function initVoxelGame() {
            if(scene) return; // Already initialized
            
            // Setup Scene
            const container = document.getElementById('voxel-view');
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0x87CEEB);
            scene.fog = new THREE.Fog(0x87CEEB, 20, 60);
            
            camera = new THREE.PerspectiveCamera(75, window.innerWidth/window.innerHeight, 0.1, 1000);
            camera.position.set(0, 2, 5);
            
            renderer = new THREE.WebGLRenderer({antialias:true});
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.shadowMap.enabled = true;
            container.appendChild(renderer.domElement);

            // Lights
            const amb = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(amb);
            const dir = new THREE.DirectionalLight(0xffffff, 0.8);
            dir.position.set(10, 20, 10);
            dir.castShadow = true;
            scene.add(dir);

            // Floor
            const geo = new THREE.BoxGeometry(1,1,1);
            for(let x=-10; x<10; x++) {
                for(let z=-10; z<10; z++) {
                    const mat = new THREE.MeshLambertMaterial({color: 0x567d46});
                    const mesh = new THREE.Mesh(geo, mat);
                    mesh.position.set(x, 0, z);
                    mesh.castShadow = true; mesh.receiveShadow = true;
                    scene.add(mesh); vObjects.push(mesh);
                }
            }

            // Inputs
            document.addEventListener('keydown', vKeyDown);
            document.addEventListener('keyup', vKeyUp);
            document.addEventListener('mousedown', vClick);
            document.getElementById('voxel-start-btn').addEventListener('click', () => {
                document.body.requestPointerLock();
                document.getElementById('voxel-menu').style.display = 'none';
            });
            document.addEventListener('mousemove', (e) => {
                if(document.pointerLockElement === document.body) {
                    camera.rotation.y -= e.movementX * 0.002;
                }
            });
            document.addEventListener('pointerlockchange', () => {
                if(document.pointerLockElement !== document.body) {
                    document.getElementById('voxel-menu').style.display = 'block';
                    document.getElementById('voxel-start-btn').innerText = "RESUME";
                }
            });
        }

        function setVoxelColor(c) { vColor = c; }
        
        function vKeyDown(e) {
            if(currentView!=='voxel-view') return;
            if(e.code==='KeyW') vMove.f=true;
            if(e.code==='KeyS') vMove.b=true;
            if(e.code==='KeyA') vMove.l=true;
            if(e.code==='KeyD') vMove.r=true;
            if(e.code==='Space' && vCanJump) { vVelocity.y = 8; vCanJump = false; }
        }
        function vKeyUp(e) {
            if(e.code==='KeyW') vMove.f=false;
            if(e.code==='KeyS') vMove.b=false;
            if(e.code==='KeyA') vMove.l=false;
            if(e.code==='KeyD') vMove.r=false;
        }
        function vClick(e) {
            if(document.pointerLockElement !== document.body) return;
            vRaycaster.setFromCamera(new THREE.Vector2(0,0), camera);
            const hits = vRaycaster.intersectObjects(vObjects);
            if(hits.length>0) {
                const hit = hits[0];
                // Left Click: Break
                if(e.button===0 && hit.object.position.y > 0) {
                    scene.remove(hit.object);
                    vObjects = vObjects.filter(o => o !== hit.object);
                }
                // Right Click: Place
                if(e.button===2) {
                    const n = new THREE.Mesh(new THREE.BoxGeometry(1,1,1), new THREE.MeshLambertMaterial({color:vColor}));
                    n.position.copy(hit.object.position).add(hit.face.normal);
                    scene.add(n); vObjects.push(n);
                }
            }
        }

        function startVoxelLoop() {
            if(!scene) initVoxelGame();
            if(voxelInt) return;
            voxelInt = setInterval(() => {
                // Physics
                vVelocity.x -= vVelocity.x * 10.0 * 0.016;
                vVelocity.z -= vVelocity.z * 10.0 * 0.016;
                vVelocity.y -= 20.0 * 0.016;

                const dir = new THREE.Vector3();
                dir.z = Number(vMove.f) - Number(vMove.b);
                dir.x = Number(vMove.r) - Number(vMove.l);
                dir.normalize();

                if(vMove.f || vMove.b) vVelocity.z -= dir.z * 20.0 * 0.016;
                if(vMove.l || vMove.r) vVelocity.x -= dir.x * 20.0 * 0.016;

                camera.translateX(-vVelocity.x * 0.016);
                camera.translateZ(-vVelocity.z * 0.016);
                camera.position.y += vVelocity.y * 0.016;

                if(camera.position.y < 2.0) { vVelocity.y = 0; camera.position.y = 2.0; vCanJump = true; }
                
                renderer.render(scene, camera);
            }, 16);
        }

        function stopVoxelLoop() {
            clearInterval(voxelInt);
            voxelInt = null;
            document.exitPointerLock();
        }

        function exitVoxel() {
            stopVoxelLoop();
        }

        // Initialize on Load
        window.onload = function() {
            checkAuth();
            initTicTacToe();
            initMemory();
        };
    </script>
</body>
</html>
