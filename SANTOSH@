<body>
    <div class="container">
        <header class="header">
            <h1 class="logo">SANTOSH @ AI</h1>
            <p class="subtitle">QQ खोज इंजन - आपके सभी QQ समस्याओं का हल</p>
        </header>

        <div class="search-container">
            <div class="search-box">
                <input type="text" class="search-input" id="searchInput" placeholder="QQ समस्या या सवाल यहाँ टाइप करें...">
                <button class="search-btn" onclick="searchQQ()">खोजें</button>
            </div>
            <div class="categories">
                <button class="category-btn active" onclick="filterByCategory('all')">सभी</button>
                <button class="category-btn" onclick="filterByCategory('login')">लॉगिन</button>
                <button class="category-btn" onclick="filterByCategory('features">फीचर्स</button>
                <button class="category-btn" onclick="filterByCategory('security')">सुरक्षा</button>
                <button class="category-btn" onclick="filterByCategory('troubleshooting">ट्रबलशूटिंग</button>
                <button class="category-btn" onclick="filterByCategory('privacy')">प्राइवेसी</button>
            </div>
        </div>

        <div class="results-container" id="resultsContainer">
            <div class="loading">
                <div class="spinner"></div>
                <p>QQ डेटाबेस से जानकारी ला रहे हैं...</p>
            </div>
        </div>
    </div>

    <script>
        // QQ डेटाबेस सिमुलेशन
        const qqDatabase = [
            {
                id: 1,
                title: "QQ खाता नहीं बन रहा",
                description: "QQ खाता बनाते समय त्रुटि आ रही है। इस समस्या का समाधान और चरण-दर-चरण गाइड।",
                category: "login",
                tags: ["account", "registration", "error"],
                views: 1250,
                helpful: 98
            },
            {
                id: 2,
                title: "QQ में स्क्रीन शेयर कैसे करें",
                description: "QQ डेस्कटॉप और मोबाइल ऐप में स्क्रीन शेयरिंग की पूरी प्रक्रिया और बेहतरीन तरीके।",
                category: "features",
                tags: ["screen sharing", "tutorial", "how-to"],
                views: 2100,
                helpful: 156
            },
            {
                id: 3,
                title: "QQ खाता सुरक्षित रखने के तरीके",
                description: "अपने QQ खाते को हैकिंग से बचाने के लिए जरूरी सुरक्षा उपाय और सेटिंंग्स।",
                category: "security",
                tags: ["security", "protection", "2fa"],
                views: 1890,
                helpful: 142
            },
            {
                id: 4,
                title: "QQ मैसेज नहीं भेज रहा",
                description: "QQ मैसेज भेजते समय समस्या आ रही है। इसे ठीक करने के तरीके और समाधान।",
                category: "troubleshooting",
                tags: ["messaging", "error", "fix"],
                views: 980,
                helpful: 87
            },
            {
                id: 5,
                title: "QQ प्राइवेसी सेटिंग्स",
                description: "QQ में अपनी प्राइवेसी कंट्रोल करने का तरीका और विकल्पों की व्याख्या।",
                category: "privacy",
                tags: ["privacy", "settings", "control"],
                views: 1560,
                helpful: 134
            },
            {
                id: 6,
                title: "QQ फ़ाइल ट्रांसफर धीमा है",
                description: "QQ फ़ाइल ट्रांसफर धीमा हो रहा है। स्पीड बढ़ाने के टिप्स और ट्रिक्स।",
                category: "features",
                tags: ["file transfer", "speed", "optimization"],
                views: 780,
                helpful: 65
            },
            {
                id: 7,
                title: "QQ पासवर्ड भूल गए",
                description: "QQ पासवर्ड रिकवरी की पूरी प्रक्रिया और सुरक्षित तरीके।",
                category: "login",
                tags: ["password", "recovery", "forgot"],
                views: 2340,
                helpful: 189
            },
            {
                id: 8,
                title: "QQ स्टिकर्स डाउनलोड कैसे करें",
                description: "आकर्षक QQ स्टिकर्स डाउनलोड करने का तरीका और सबसे अच्छे स्टिकर्स की लिस्ट।",
                category: "features",
                tags: ["stickers", "download", "emojis"],
                views: 1450,
                helpful: 112
            }
        ];

        let currentCategory = 'all';
        let searchResults = [];

        // इनिशियल लोड
        window.onload = function() {
            setTimeout(() => {
                displayResults(qqDatabase);
            }, 1500);
        };

        // खोज फंक्शन
        function searchQQ() {
            const searchInput = document.getElementById('searchInput');
            const query = searchInput.value.toLowerCase().trim();
            
            if (!query) {
                showNotification('कृपया खोज के लिए कुछ टाइप करें');
                return;
            }

            showLoading();
            
            setTimeout(() => {
                const filtered = qqDatabase.filter(item => 
                    item.title.toLowerCase().includes(query) ||
                    item.description.toLowerCase().includes(query) ||
                    item.tags.some(tag => tag.toLowerCase().includes(query))
                );
                
                searchResults = filtered;
                displayResults(filtered);
            }, 500);
        }

        // कैटेगरी फिल्टर
        function filterByCategory(category) {
            currentCategory = category;
            
            // बटन स्टाइल अपडेट
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // फिल्टर करें
            const filtered = category === 'all' 
                ? qqDatabase 
                : qqDatabase.filter(item => item.category === category);
            
            displayResults(filtered);
        }

        // रिजल्ट्स डिस्प्ले
        function displayResults(results) {
            const container = document.getElementById('resultsContainer');
            
            if (results.length === 0) {
                container.innerHTML = `
                    <div class="no-results">
                        <h3>कोई रिजल्ट नहीं मिला</h3>
                        <p>कृपया अलग से खोजें या अन्य कैटेगरी आज़माएं</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = results.map(item => `
                <div class="result-item" onclick="showDetails(${item.id})">
                    <h3 class="result-title">${item.title}</h3>
                    <p class="result-description">${item.description}</p>
                    <div class="result-meta">
                        <span>👁 ${item.views} views</span>
                        <span>👍 ${item.helpful} helpful</span>
                        <span class="tag">${item.category}</span>
                    </div>
                </div>
            `).join('');
        }

        // डिटेल्स शो
        function showDetails(id) {
            const item = qqDatabase.find(i => i.id === id);
            if (item) {
                showNotification(`"${item.title}" के लिए पूरी जानकारी दिखा रहे हैं...`);
            }
        }

        // लोडिंग शो
        function showLoading() {
            const container = document.getElementById('resultsContainer');
            container.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>रिजल्ट्स खोज रहे हैं...</p>
                </div>
            `;
        }

        // नोटिफिकेशन
        function showNotification(message) {
            // नोटिफिकेशन बनाएं
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: #333;
                color: white;
                padding: 15px 25px;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                z-index: 1000;
                animation: slideIn 0.3s ease-out;
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease-out';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // एंटर की रिस्पॉन्स
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchQQ();
            }
        });

        // एनिमेशन एड करें
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from {
                    transform: translateX(100%);
                    opacity: 0;
                }
                to {
                    transform: translateX(0);
                    opacity: 1;
                }
            }
            @keyframes slideOut {
                from {
                    transform: translateX(0);
                    opacity: 1;
                }
                to {
                    transform: translateX(100%);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
