    <div class="winner-modal" id="winnerModal">
        <div class="winner-content">
            <h2 id="winnerText">üèÜ ‡§Æ‡§æ‡§π‡§ø‡§§! üèÜ</h2>
            <p id="winnerDetails"></p>
            <button class="btn btn-bat" onclick="resetGame()">‡§®‡§Ø‡§æ ‡§ó‡•á‡§Æ ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç</button>
        </div>
    </div>

    <script>
        let gameState = {
            team1: null,
            team2: null,
            battingTeam: null,
            bowlingTeam: null,
            score: 0,
            wickets: 0,
            overs: 0,
            balls: 0,
            currentBall: 0,
            gameOver: false,
            innings: 1,
            inningsScores: []
        };

        const commentaryMessages = {
            drive: [
                "‡§∂‡§æ‡§®‡§¶‡§æ‡§∞ ‡§°‡•ç‡§∞‡§æ‡§á‡§µ!",
                "‡§¨‡•á‡§π‡§§‡§∞‡•Ä‡§® ‡§∂‡•â‡§ü!",
                "‡§∞‡§® ‡§≤‡•á‡§®‡•á ‡§ï‡§æ ‡§Ö‡§ö‡•ç‡§õ‡§æ ‡§Æ‡•å‡§ï‡§æ!",
                "‡§¨‡§≤‡•ç‡§≤‡•á‡§¨‡§æ‡§ú ‡§®‡•á ‡§Ö‡§ö‡•ç‡§õ‡§æ ‡§ñ‡•á‡§≤‡§æ!"
            ],
            pull: [
                "‡§°‡•á‡§°‡§≤‡•Ä ‡§™‡•Å‡§≤!",
                "‡§â‡§∏‡•á ‡§õ‡•ã‡§°‡§º ‡§¶‡§ø‡§Ø‡§æ!",
                "‡§¨‡§≤‡•ç‡§≤‡•á‡§¨‡§æ‡§ú ‡§®‡•á ‡§™‡•Ç‡§∞‡•Ä ‡§§‡§∞‡§π ‡§∏‡•á ‡§ñ‡•á‡§≤‡§æ!",
                "‡§¨‡§°‡§º‡•á ‡§∂‡•â‡§ü!"
            ],
            cut: [
                "‡§∂‡§æ‡§®‡§¶‡§æ‡§∞ ‡§ï‡§ü!",
                "‡§´‡§æ‡§á‡§® ‡§è‡§ú ‡§™‡§∞!",
                "‡§â‡§∏‡•á ‡§¨‡§æ‡§π‡§∞ ‡§≠‡•á‡§ú‡§æ!",
                "‡§¨‡•á‡§π‡§§‡§∞‡•Ä‡§® ‡§π‡§ø‡§ü!"
            ],
            sweep: [
                "‡§∏‡•ç‡§Æ‡§æ‡§∞‡•ç‡§ü ‡§∏‡•ç‡§µ‡•Ä‡§™!",
                "‡§ó‡•Ç‡§ó‡§≤‡•Ä ‡§∏‡•ç‡§µ‡•Ä‡§™!",
                "‡§¨‡§≤‡•ç‡§≤‡•á‡§¨‡§æ‡§ú ‡§®‡•á ‡§∏‡•ç‡§Æ‡§æ‡§∞‡•ç‡§ü ‡§ñ‡•á‡§≤‡§æ!",
                "‡§Ö‡§ö‡•ç‡§õ‡§æ ‡§∞‡§®!"
            ],
            hook: [
                "‡§°‡•á‡§Ç‡§ú‡§∞‡§∏ ‡§π‡•Å‡§ï!",
                "‡§ú‡•ã‡§ñ‡§ø‡§Æ ‡§≠‡§∞‡§æ ‡§∂‡•â‡§ü!",
                "‡§â‡§∏‡•á ‡§®‡§ø‡§Ø‡§Ç‡§§‡•ç‡§∞‡§ø‡§§ ‡§ï‡§∞ ‡§≤‡§ø‡§Ø‡§æ!",
                "‡§¨‡§°‡§º‡§æ ‡§∞‡§®!"
            ],
            defense: [
                "‡§∏‡•Å‡§∞‡§ï‡•ç‡§∑‡§æ‡§§‡•ç‡§Æ‡§ï ‡§ñ‡•á‡§≤!",
                "‡§Ö‡§ö‡•ç‡§õ‡§æ ‡§¨‡§ö‡§æ‡§µ!",
                "‡§¨‡§≤‡•ç‡§≤‡•á‡§¨‡§æ‡§ú ‡§∏‡•Å‡§∞‡§ï‡•ç‡§∑‡§ø‡§§ ‡§π‡•à!",
                "‡§ß‡•à‡§∞‡•ç‡§Ø‡§µ‡§æ‡§® ‡§ñ‡•á‡§≤!"
            ]
        };

        function selectTeam(teamCode, teamName, logo) {
            if (!gameState.team1) {
                gameState.team1 = { code: teamCode, name: teamName, logo: logo };
                event.target.classList.add('selected');
                addCommentary(`${teamName} ‡§®‡•á ‡§ü‡•â‡§∏ ‡§ú‡•Ä‡§§‡§æ ‡§î‡§∞ ‡§™‡§π‡§≤‡•á ‡§¨‡•à‡§ü ‡§ï‡§∞‡•á‡§ó‡§æ!`);
            } else if (!gameState.team2 && gameState.team1.code !== teamCode) {
                gameState.team2 = { code: teamCode, name: teamName, logo: logo };
                event.target.classList.add('selected');
                startGame();
            }
        }

        function startGame() {
            gameState.battingTeam = gameState.team1;
            gameState.bowlingTeam = gameState.team2;
            document.getElementById('teamSelection').style.display = 'none';
            document.getElementById('gameArea').style.display = 'grid';
            document.getElementById('battingTeam').textContent = gameState.battingTeam.name;
            document.getElementById('bowlingTeam').textContent = gameState.bowlingTeam.name;
            updateDisplay();
        }

        function updateDisplay() {
            document.getElementById('score').textContent = gameState.score;
            document.getElementById('wickets').textContent = gameState.wickets;
            document.getElementById('overs').textContent = `${gameState.overs}.${gameState.balls}`;
            document.getElementById('runRate').textContent = (gameState.overs > 0 ? (gameState.score / gameState.overs).toFixed(2) : '0.00');
            document.getElementById('remaining').textContent = `${20 - gameState.overs} ‡§ì‡§µ‡§∞`;
            document.getElementById('strike').textContent = gameState.battingTeam.name;
        }

        function bat() {
            if (gameState.gameOver) return;
            document.getElementById('batBtn').disabled = true;
            document.getElementById('shotSelection').style.display = 'grid';
        }

        function bowl() {
            if (gameState.gameOver) return;
            document.getElementById('bowlBtn').disabled = true;
            simulateBowling();
        }

        function playShot(shotType) {
            document.getElementById('shotSelection').style.display = 'none';
            document.getElementById('batBtn').disabled = false;
            document.getElementById('bowlBtn').disabled = false;
            
            const ball = document.getElementById('ball');
            ball.style.display = 'block';
            
            setTimeout(() => {
                ball.style.display = 'none';
                executeShot(shotType);
            }, 1000);
        }

        function executeShot(shotType) {
            const outcomes = {
                drive: [0, 1, 2, 3, 4, 6, 'W'],
                pull: [0, 1, 2, 4, 6, 'W', 'W'],
                cut: [0, 1, 2, 4, 'W'],
                sweep: [0, 1, 2, 3, 'W'],
                hook: [0, 1, 4, 6, 'W', 'W'],
                defense: [0, 1, 2]
            };

            const possibleOutcomes = outcomes[shotType];
            const outcome = possibleOutcomes[Math.floor(Math.random() * possibleOutcomes.length)];

            if (outcome === 'W') {
                gameState.wickets++;
                addCommentary(`‡§µ‡§ø‡§ï‡•á‡§ü! ${gameState.battingTeam.name} ‡§ï‡§æ ‡§¨‡§≤‡•ç‡§≤‡•á‡§¨‡§æ‡§ú ‡§Ü‡§â‡§ü ‡§π‡•ã ‡§ó‡§Ø‡§æ‡•§`);
                if (gameState.wickets === 10 || gameState.overs === 20) {
                    endInnings();
                } else {
                    addCommentary(`‡§®‡§è ‡§¨‡§≤‡•ç‡§≤‡•á‡§¨‡§æ‡§ú ‡§Æ‡•à‡§¶‡§æ‡§® ‡§™‡§∞ ‡§Ü‡§è‡•§`);
                }
            } else {
                gameState.score += outcome;
                addCommentary(`${outcome} ‡§∞‡§®! ${shotType} ‡§∂‡•â‡§ü ‡§∏‡•á‡•§`);
                if (outcome === 4 || outcome === 6) {
                    addCommentary(`‡§∂‡§æ‡§®‡§¶‡§æ‡§∞ ${outcome}! ‡§¨‡§°‡§º‡§æ ‡§∂‡•â‡§ü!`);
                }
            }

            gameState.currentBall++;
            if (gameState.currentBall === 6) {
                gameState.currentBall = 0;
                gameState.overs++;
                if (gameState.overs === 20) {
                    endInnings();
                } else {
                    addCommentary(`${gameState.overs} ‡§ì‡§µ‡§∞ ‡§™‡•Ç‡§∞‡•á ‡§π‡•Å‡§è‡•§`);
                }
            }

            updateDisplay();
        }

        function simulateBowling() {
            const ball = document.getElementById('ball');
            ball.style.display = 'block';
            
            setTimeout(() => {
                ball.style.display = 'none';
                const runs = Math.floor(Math.random() * 7);
                if (runs === 6) {
                    gameState.score += runs;
                    addCommentary(`‡§®‡•â ‡§¨‡•â‡§≤! ${runs} ‡§∞‡§®!`);
                } else if (runs === 0) {
                    addCommentary(`‡§°‡•â‡§ü ‡§¨‡•â‡§≤!`);
                } else {
                    gameState.score += runs;
                    addCommentary(`${runs} ‡§∞‡§®!`);
                }
                
                gameState.currentBall++;
                if (gameState.currentBall === 6) {
                    gameState.currentBall = 0;
                    gameState.overs++;
                    if (gameState.overs === 20) {
                        endInnings();
                    } else {
                        addCommentary(`${gameState.overs} ‡§ì‡§µ‡§∞ ‡§™‡•Ç‡§∞‡•á ‡§π‡•Å‡§è‡•§`);
                    }
                }
                updateDisplay();
            }, 1000);
        }

        function endInnings() {
            gameState.inningsScores.push({
                team: gameState.battingTeam.name,
                score: gameState.score,
                wickets: gameState.wickets,
                overs: gameState.overs
            });

            if (gameState.innings === 1) {
                gameState.innings = 2;
                gameState.battingTeam = gameState.team2;
                gameState.bowlingTeam = gameState.team1;
                gameState.score = 0;
                gameState.wickets = 0;
                gameState.overs = 0;
                gameState.currentBall = 0;
                gameState.gameOver = false;
                document.getElementById('battingTeam').textContent = gameState.battingTeam.name;
                document.getElementById('bowlingTeam').textContent = gameState.bowlingTeam.name;
                addCommentary(`‡§¶‡•Ç‡§∏‡§∞‡•Ä ‡§™‡§æ‡§∞‡•Ä ‡§∂‡•Å‡§∞‡•Ç! ${gameState.battingTeam.name} ‡§¨‡•à‡§ü ‡§ï‡§∞ ‡§∞‡§π‡§æ ‡§π‡•à‡•§`);
                updateDisplay();
            } else {
                gameState.gameOver = true;
                showWinner();
            }
        }

        function showWinner() {
            const team1Score = gameState.inningsScores[0].score;
            const team2Score = gameState.inningsScores[1].score;
            
            let winner, details;
            if (team1Score > team2Score) {
                winner = gameState.team1.name;
                details = `${gameState.team1.name} ‡§®‡•á ${team1Score} ‡§∞‡§® ‡§∏‡•á ‡§ú‡•Ä‡§§‡•Ä!`;
            } else if (team2Score > team1Score) {
                winner = gameState.team2.name;
                details = `${gameState.team2.name} ‡§®‡•á ${team2Score} ‡§∞‡§® ‡§∏‡•á ‡§ú‡•Ä‡§§‡•Ä!`;
            } else {
                winner = "‡§°‡•ç‡§∞‡§æ‡§Ö";
                details = "‡§Æ‡•à‡§ö ‡§°‡•ç‡§∞‡§æ‡§Ö ‡§π‡•Å‡§Ü!";
            }
            
            document.getElementById('winnerText').textContent = `üèÜ ${winner} ‡§ú‡•Ä‡§§‡§æ! üèÜ`;
            document.getElementById('winnerDetails').textContent = details;
            document.getElementById('winnerModal').style.display = 'flex';
        }

        function resetGame() {
            gameState = {
                team1: null,
                team2: null,
                battingTeam: null,
                bowlingTeam: null,
                score: 0,
                wickets: 0,
                overs: 0,
                balls: 0,
                currentBall: 0,
                gameOver: false,
                innings: 1,
                inningsScores: []
            };
            
            document.getElementById('teamSelection').style.display = 'grid';
            document.getElementById('gameArea').style.display = 'none';
            document.getElementById('winnerModal').style.display = 'none';
            document.querySelectorAll('.team-box').forEach(box => box.classList.remove('selected'));
            document.getElementById('commentary').innerHTML = '<div class="commentary-text">‡§ó‡•á‡§Æ ‡§∂‡•Å‡§∞‡•Ç ‡§π‡•Å‡§Ü!</div>';
        }

        function addCommentary(message) {
            const commentaryDiv = document.getElementById('commentary');
            const comment = document.createElement('div');
            comment.className = 'commentary-text';
            comment.textContent = message;
            commentaryDiv.appendChild(comment);
            commentaryDiv.scrollTop = commentaryDiv.scrollHeight;
        }
    </script>
