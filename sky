                badge: "Trending"
            },
            {
                id: 7,
                brand: "BIBA",
                name: "Women Kurta with Palazzos",
                price: 1299,
                originalPrice: 2999,
                discount: 57,
                rating: 4.3,
                ratingCount: 4567,
                image: "https://picsum.photos/seed/product7/300/400.jpg",
                badge: ""
            },
            {
                id: 8,
                brand: "U.S. Polo",
                name: "Men Solid Polo Collar T-Shirt",
                price: 799,
                originalPrice: 1699,
                discount: 53,
                rating: 4.2,
                ratingCount: 6789,
                image: "https://picsum.photos/seed/product8/300/400.jpg",
                badge: ""
            }
        ];

        // Cart data
        let cart = [];
        let wishlist = [];

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            renderProducts(products);
            setupFilterButtons();
            setupSortDropdown();
        });

        // Render products
        function renderProducts(productsToRender) {
            const productsGrid = document.getElementById('products-grid');
            productsGrid.innerHTML = '';

            productsToRender.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-img-container">
                        <img src="${product.image}" alt="${product.name}" class="product-img">
                        ${product.badge ? `<span class="product-badge">${product.badge}</span>` : ''}
                        <div class="product-wishlist ${wishlist.includes(product.id) ? 'active' : ''}" onclick="toggleWishlist(${product.id})">
                            <i class="fas fa-heart"></i>
                        </div>
                    </div>
                    <div class="product-details">
                        <div class="product-brand">${product.brand}</div>
                        <div class="product-name">${product.name}</div>
                        <div class="product-price">
                            <span class="price-current">₹${product.price}</span>
                            <span class="price-original">₹${product.originalPrice}</span>
                            <span class="price-discount">(${product.discount}% OFF)</span>
                        </div>
                        <div class="product-rating">
                            <span class="rating-value">${product.rating} <i class="fas fa-star"></i></span>
                            <span class="rating-count">| ${product.ratingCount}</span>
                        </div>
                    </div>
                `;
                
                productCard.addEventListener('click', function(e) {
                    if (!e.target.closest('.product-wishlist')) {
                        addToCart(product);
                    }
                });
                
                productsGrid.appendChild(productCard);
            });
        }

        // Setup filter buttons
        function setupFilterButtons() {
            const filterButtons = document.querySelectorAll('.filter-btn');
            
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    // Filter products based on selected category
                    const filterText = this.textContent.toLowerCase();
                    if (filterText === 'all') {
                        renderProducts(products);
                    } else {
                        // In a real app, you would filter based on actual product categories
                        // For demo purposes, we'll just show a subset of products
                        const filteredProducts = products.slice(0, 4);
                        renderProducts(filteredProducts);
                    }
                });
            });
        }

        // Setup sort dropdown
        function setupSortDropdown() {
            const sortDropdown = document.querySelector('.sort-dropdown');
            
            sortDropdown.addEventListener('change', function() {
                const sortValue = this.value;
                let sortedProducts = [...products];
                
                if (sortValue.includes('Low to High')) {
                    sortedProducts.sort((a, b) => a.price - b.price);
                } else if (sortValue.includes('High to Low')) {
                    sortedProducts.sort((a, b) => b.price - a.price);
                } else if (sortValue.includes('New Arrivals')) {
                    sortedProducts = sortedProducts.filter(p => p.badge === 'New Arrival');
                } else if (sortValue.includes('Best Sellers')) {
                    sortedProducts = sortedProducts.filter(p => p.badge === 'Bestseller');
                }
                
                renderProducts(sortedProducts);
            });
        }

        // Add to cart
        function addToCart(product) {
            const existingItem = cart.find(item => item.id === product.id);
            
            if (existingItem) {
                existingItem.quantity++;
            } else {
                cart.push({
                    ...product,
                    quantity: 1
                });
            }
            
            updateCart();
            showNotification('Product added to cart!');
        }

        // Update cart
        function updateCart() {
            const cartCount = document.getElementById('cart-count');
            const cartItems = document.getElementById('cart-items');
            const cartTotal = document.getElementById('cart-total');
            
            // Update cart count
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            cartCount.textContent = totalItems;
            
            // Update cart items
            cartItems.innerHTML = '';
            
            if (cart.length === 0) {
                cartItems.innerHTML = '<p style="text-align: center; padding: 20px;">Your cart is empty</p>';
            } else {
                cart.forEach(item => {
                    const cartItem = document.createElement('div');
                    cartItem.className = 'cart-item';
                    cartItem.innerHTML = `
                        <img src="${item.image}" alt="${item.name}" class="cart-item-img">
                        <div class="cart-item-details">
                            <div class="cart-item-brand">${item.brand}</div>
                            <div class="cart-item-name">${item.name}</div>
                            <div class="cart-item-price">₹${item.price}</div>
                            <div class="cart-item-quantity">
                                <button class="quantity-btn" onclick="updateQuantity(${item.id}, -1)">-</button>
                                <span class="quantity-value">${item.quantity}</span>
                                <button class="quantity-btn" onclick="updateQuantity(${item.id}, 1)">+</button>
                            </div>
                        </div>
                    `;
                    cartItems.appendChild(cartItem);
                });
            }
            
            // Update cart total
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            cartTotal.textContent = `₹${total}`;
        }

        // Update quantity
        function updateQuantity(productId, change) {
            const item = cart.find(item => item.id === productId);
            
            if (item) {
                item.quantity += change;
                
                if (item.quantity <= 0) {
                    cart = cart.filter(item => item.id !== productId);
                }
                
                updateCart();
            }
        }

        // Toggle cart
        function toggleCart() {
            const cartModal = document.getElementById('cart-modal');
            const overlay = document.getElementById('overlay');
            
            cartModal.classList.toggle('active');
            overlay.classList.toggle('active');
        }

        // Toggle wishlist
        function toggleWishlist(productId) {
            const index = wishlist.indexOf(productId);
            
            if (index > -1) {
                wishlist.splice(index, 1);
                showNotification('Product removed from wishlist');
            } else {
                wishlist.push(productId);
                showNotification('Product added to wishlist');
            }
            
            // Update wishlist icons
            const wishlistIcons = document.querySelectorAll('.product-wishlist');
            wishlistIcons.forEach(icon => {
                const productCard = icon.closest('.product-card');
                const productIndex = Array.from(productCard.parentNode.children).indexOf(productCard);
                
                if (productIndex < products.length && products[productIndex].id === productId) {
                    icon.classList.toggle('active');
                }
            });
        }

        // Show notification
        function showNotification(message) {
            // Create notification element
            const notification = document.createElement('div');
            notification.style.position = 'fixed';
            notification.style.bottom = '20px';
            notification.style.left = '50%';
            notification.style.transform = 'translateX(-50%)';
            notification.style.backgroundColor = 'rgba(0, 0, 0, 0.8)';
            notification.style.color = 'white';
            notification.style.padding = '12px 24px';
            notification.style.borderRadius = '4px';
            notification.style.zIndex = '3000';
            notification.style.transition = 'opacity 0.3s ease';
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            // Remove notification after 3 seconds
            setTimeout(() => {
                notification.style.opacity = '0';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }

        // Banner slider
        let currentSlide = 0;
        const slides = document.querySelectorAll('.banner-slide');
        const dots = document.querySelectorAll('.dot');

        function changeSlide(index) {
            // Hide current slide
            slides[currentSlide].classList.remove('active');
            dots[currentSlide].classList.remove('active');
            
            // Show new slide
            currentSlide = index;
            slides[currentSlide].classList.add('active');
            dots[currentSlide].classList.add('active');
        }

        // Auto slide
        setInterval(() => {
            const nextSlide = (currentSlide + 1) % slides.length;
            changeSlide(nextSlide);
        }, 5000);

        // Search functionality
        const searchInput = document.querySelector('.search-input');
        const searchBtn = document.querySelector('.search-btn');

        searchBtn.addEventListener('click', function() {
            const searchTerm = searchInput.value.trim();
            if (searchTerm) {
                showNotification(`Searching for: ${searchTerm}`);
                // In a real app, you would filter products based on the search term
            }
        });

        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchBtn.click();
            }
        });
    </script>
</body>
</html>
