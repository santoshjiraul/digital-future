                <span class="cart-total-value" id="cart-total">₹0</span>
            </div>
            <button class="checkout-btn">Proceed to Checkout</button>
        </div>
    </div>

    <!-- Overlay -->
    <div class="overlay" id="overlay" onclick="toggleCart()"></div>

    <script>
        // Sample product data
        const products = [
            {
                id: 1,
                brand: "Roadster",
                name: "Men Solid Round Neck T-Shirt",
                price: 499,
                originalPrice: 1299,
                discount: 61,
