    <script>
        // Sample data
        const resultsData = [
            { exam: "SSC CGL", date: "15 Dec 2023", board: "Staff Selection Commission", status: "Released", link: "#" },
            { exam: "UPSSSC PET", date: "14 Dec 2023", board: "UP Subordinate Service Selection Commission", status: "Released", link: "#" },
            { exam: "RRB NTPC", date: "13 Dec 2023", board: "Railway Recruitment Board", status: "Released", link: "#" },
            { exam: "IBPS PO Prelims", date: "12 Dec 2023", board: "Institute of Banking Personnel Selection", status: "Released", link: "#" },
            { exam: "UPTET", date: "11 Dec 2023", board: "UP Basic Education Board", status: "Released", link: "#" },
            { exam: "CTET December", date: "10 Dec 2023", board: "Central Board of Secondary Education", status: "Released", link: "#" }
        ];

        const jobsData = [
            { title: "SSC CGL 2024", posts: "2000", lastDate: "31 Dec 2023", location: "All India" },
            { title: "UP Police Constable", posts: "26000", lastDate: "15 Dec 2023", location: "Uttar Pradesh" },
            { title: "RRB NTPC 2024", posts: "15000", lastDate: "20 Dec 2023", location: "All India" },
            { title: "IBPS PO 2024", posts: "5000", lastDate: "25 Dec 2023", location: "All India" },
            { title: "UPSC CSE 2024", posts: "1056", lastDate: "06 Feb 2024", location: "All India" },
            { title: "BPSC 68th", posts: "341", lastDate: "30 Dec 2023", location: "Bihar" }
        ];

        const notificationsData = [
            { title: "SSC CGL 2024 Notification Released", date: "2 hours ago", type: "urgent" },
            { title: "UPSSSC PET Admit Card Available", date: "5 hours ago", type: "important" },
            { title: "RRB NTPC Result 2023 Declared", date: "1 day ago", type: "normal" },
            { title: "IBPS PO Mains Admit Card Download", date: "2 days ago", type: "important" },
            { title: "CTET December 2023 Answer Key Released", date: "3 days ago", type: "normal" }
        ];

        // Load results
        function loadResults() {
            const container = document.getElementById('resultsContainer');
            container.innerHTML = resultsData.map(result => `
                <div class="bg-white rounded-lg shadow-md p-6 card-hover">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-semibold text-gray-800">${result.exam}</h3>
                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">${result.status}</span>
                    </div>
                    <p class="text-gray-600 mb-2"><i class="fas fa-building mr-2"></i>${result.board}</p>
                    <p class="text-gray-600 mb-4"><i class="fas fa-calendar mr-2"></i>${result.date}</p>
                    <a href="${result.link}" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition inline-block">
                        <i class="fas fa-download mr-2"></i>Download Result
                    </a>
                </div>
            `).join('');
        }

        // Load jobs
        function loadJobs() {
            const container = document.getElementById('jobsContainer');
            container.innerHTML = jobsData.map(job => `
                <div class="bg-white rounded-lg shadow-md p-6 card-hover">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-semibold text-gray-800">${job.title}</h3>
                        <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">${job.posts} Posts</span>
                    </div>
                    <div class="space-y-2 text-gray-600">
                        <p><i class="fas fa-map-marker-alt mr-2"></i>${job.location}</p>
                        <p><i class="fas fa-clock mr-2"></i>Last Date: ${job.lastDate}</p>
                    </div>
                    <button class="mt-4 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition w-full">
                        <i class="fas fa-file-alt mr-2"></i>View Details
                    </button>
                </div>
            `).join('');
        }

        // Load notifications
        function loadNotifications() {
            const container = document.getElementById('notificationsContainer');
            container.innerHTML = notificationsData.map(notif => {
                let bgColor = 'bg-gray-100';
                if (notif.type === 'urgent') bgColor = 'bg-red-100';
                else if (notif.type === 'important') bgColor = 'bg-yellow-100';
                
                return `
                    <div class="flex items-center justify-between p-4 rounded-lg ${bgColor} ${notif.type === 'urgent' ? 'border-l-4 border-red-500' : ''}">
                        <div class="flex items-center">
                            <i class="fas fa-${notif.type === 'urgent' ? 'exclamation-circle text-red-500' : 'info-circle text-blue-500'} mr-3"></i>
                            <div>
                                <h4 class="font-semibold text-gray-800">${notif.title}</h4>
                                <p class="text-sm text-gray-600">${notif.date}</p>
                            </div>
                        </div>
                        <button class="text-purple-600 hover:text-purple-800">
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                `;
            }).join('');
        }

        // Toggle mobile menu
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        // Search functionality
        function performSearch() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            if (searchTerm) {
                alert(`Searching for: ${searchTerm}\n\nThis would typically redirect to search results page.`);
            }
        }

        // Show category
        function showCategory(category) {
            const sections = {
                'results': document.getElementById('results'),
                'jobs': document.getElementById('jobs'),
                'admit-card': document.getElementById('admit-card'),
                'syllabus': document.getElementById('syllabus')
            };
            
            if (sections[category]) {
                sections[category].scrollIntoView({ behavior: 'smooth' });
            }
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            loadResults();
            loadJobs();
            loadNotifications();
        });

        // Add some interactivity
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
</body>
</html>
