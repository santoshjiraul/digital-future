        let currentCategory = 'all';
        let searchResults = [];

        // ‡§á‡§®‡§ø‡§∂‡§ø‡§Ø‡§≤ ‡§≤‡•ã‡§°
        window.onload = function() {
            setTimeout(() => {
                displayResults(qqDatabase);
            }, 1500);
        };

        // ‡§ñ‡•ã‡§ú ‡§´‡§Ç‡§ï‡•ç‡§∂‡§®
        function searchQQ() {
            const searchInput = document.getElementById('searchInput');
            const query = searchInput.value.toLowerCase().trim();
            
            if (!query) {
                showNotification('‡§ï‡•É‡§™‡§Ø‡§æ ‡§ñ‡•ã‡§ú ‡§ï‡•á ‡§≤‡§ø‡§è ‡§ï‡•Å‡§õ ‡§ü‡§æ‡§á‡§™ ‡§ï‡§∞‡•á‡§Ç');
                return;
            }

            showLoading();
            
            setTimeout(() => {
                const filtered = qqDatabase.filter(item => 
                    item.title.toLowerCase().includes(query) ||
                    item.description.toLowerCase().includes(query) ||
                    item.tags.some(tag => tag.toLowerCase().includes(query))
                );
                
                searchResults = filtered;
                displayResults(filtered);
            }, 500);
        }

        // ‡§ï‡•à‡§ü‡•á‡§ó‡§∞‡•Ä ‡§´‡§ø‡§≤‡•ç‡§ü‡§∞
        function filterByCategory(category) {
            currentCategory = category;
            
            // ‡§¨‡§ü‡§® ‡§∏‡•ç‡§ü‡§æ‡§á‡§≤ ‡§Ö‡§™‡§°‡•á‡§ü
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // ‡§´‡§ø‡§≤‡•ç‡§ü‡§∞ ‡§ï‡§∞‡•á‡§Ç
            const filtered = category === 'all' 
                ? qqDatabase 
                : qqDatabase.filter(item => item.category === category);
            
            displayResults(filtered);
        }

        // ‡§∞‡§ø‡§ú‡§≤‡•ç‡§ü‡•ç‡§∏ ‡§°‡§ø‡§∏‡•ç‡§™‡•ç‡§≤‡•á
        function displayResults(results) {
            const container = document.getElementById('resultsContainer');
            
            if (results.length === 0) {
                container.innerHTML = `
                    <div class="no-results">
                        <h3>‡§ï‡•ã‡§à ‡§∞‡§ø‡§ú‡§≤‡•ç‡§ü ‡§®‡§π‡•Ä‡§Ç ‡§Æ‡§ø‡§≤‡§æ</h3>
                        <p>‡§ï‡•É‡§™‡§Ø‡§æ ‡§Ö‡§≤‡§ó ‡§∏‡•á ‡§ñ‡•ã‡§ú‡•á‡§Ç ‡§Ø‡§æ ‡§Ö‡§®‡•ç‡§Ø ‡§ï‡•à‡§ü‡•á‡§ó‡§∞‡•Ä ‡§Ü‡§ú‡§º‡§Æ‡§æ‡§è‡§Ç</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = results.map(item => `
                <div class="result-item" onclick="showDetails(${item.id})">
                    <h3 class="result-title">
                        <div class="result-icon">${item.id}</div>
                        ${item.title}
                    </h3>
                    <p class="result-description">${item.description}</p>
                    <div class="result-meta">
                        <span class="meta-item">üëÅ ${item.views} views</span>
                        <span class="meta-item">üëç ${item.helpful} helpful</span>
                        <span class="tag">${item.category}</span>
                    </div>
                </div>
            `).join('');
        }

        // ‡§°‡§ø‡§ü‡•á‡§≤‡•ç‡§∏ ‡§∂‡•ã
        function showDetails(id) {
            const item = qqDatabase.find(i => i.id === id);
            if (item) {
                showNotification(`"${item.title}" ‡§ï‡•á ‡§≤‡§ø‡§è ‡§™‡•Ç‡§∞‡•Ä ‡§ú‡§æ‡§®‡§ï‡§æ‡§∞‡•Ä ‡§¶‡§ø‡§ñ‡§æ ‡§∞‡§π‡•á ‡§π‡•à‡§Ç...`);
            }
        }

        // ‡§≤‡•ã‡§°‡§ø‡§Ç‡§ó ‡§∂‡•ã
        function showLoading() {
            const container = document.getElementById('resultsContainer');
            container.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>‡§∞‡§ø‡§ú‡§≤‡•ç‡§ü‡•ç‡§∏ ‡§ñ‡•ã‡§ú ‡§∞‡§π‡•á ‡§π‡•à‡§Ç...</p>
                </div>
            `;
        }

        // ‡§®‡•ã‡§ü‡§ø‡§´‡§ø‡§ï‡•á‡§∂‡§®
        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // ‡§è‡§Ç‡§ü‡§∞ ‡§ï‡•Ä ‡§∞‡§ø‡§∏‡•ç‡§™‡•â‡§®‡•ç‡§∏
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchQQ();
            }
        });
