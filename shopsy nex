    <script>
        // --- Data: Products ---
        const products = [
            { id: 1, name: "Stylish Men's Jacket", category: "Fashion", price: 1499, original: 2999, image: "https://picsum.photos/seed/jacket/300/300", desc: "Premium quality denim jacket for men. Perfect for winter." },
            { id: 2, name: "Wireless Headphones", category: "Electronics", price: 2999, original: 5999, image: "https://picsum.photos/seed/headphone/300/300", desc: "Noise cancelling wireless headphones with 20h battery life." },
            { id: 3, name: "Running Shoes", category: "Fashion", price: 999, original: 1999, image: "https://picsum.photos/seed/shoes/300/300", desc: "Lightweight and durable running shoes for daily use." },
            { id: 4, name: "Smart Watch", category: "Electronics", price: 3499, original: 6999, image: "https://picsum.photos/seed/watch/300/300", desc: "Fitness tracker with heart rate monitor and OLED display." },
            { id: 5, name: "Cotton Bedsheet", category: "Home", price: 599, original: 1299, image: "https://picsum.photos/seed/bed/300/300", desc: "Soft double bed cotton bedsheet with pillow covers." },
            { id: 6, name: "Face Serum", category: "Beauty", price: 499, original: 999, image: "https://picsum.photos/seed/serum/300/300", desc: "Vitamin C serum for glowing skin and anti-aging." },
            { id: 7, name: "Laptop Backpack", category: "Fashion", price: 799, original: 1599, image: "https://picsum.photos/seed/bag/300/300", desc: "Water-resistant backpack with padded laptop compartment." },
            { id: 8, name: "Bluetooth Speaker", category: "Electronics", price: 1299, original: 2499, image: "https://picsum.photos/seed/speaker/300/300", desc: "Portable speaker with deep bass and 360° sound." },
        ];

        let cart = [];
        let currentFilter = 'all';

        // --- Initialization ---
        document.addEventListener('DOMContentLoaded', () => {
            renderProducts(products);
            startCountdown();
            
            // Search Event Listener
            document.getElementById('searchInput').addEventListener('input', (e) => {
                const keyword = e.target.value.toLowerCase();
                const filtered = products.filter(p => p.name.toLowerCase().includes(keyword));
                renderProducts(filtered);
            });

            // Mode Toggle Event Listener
            document.getElementById('modeToggle').addEventListener('change', (e) => {
                toggleMode(e.target.checked);
            });
        });

        // --- Render Products ---
        function renderProducts(productList) {
            const grid = document.getElementById('productGrid');
            grid.innerHTML = '';

            if(productList.length === 0) {
                grid.innerHTML = '<p style="grid-column: 1/-1; text-align: center; color: #777;">No products found.</p>';
                return;
            }

            productList.forEach(product => {
                const discount = Math.round(((product.original - product.price) / product.original) * 100);
                
                const card = document.createElement('div');
                card.className = 'product-card';
                card.onclick = (e) => {
                    // Prevent opening modal if clicked on heart or add button
                    if(!e.target.closest('.wishlist-icon') && !e.target.closest('.add-btn')) {
                        openModal(product.id);
                    }
                };

                card.innerHTML = `
                    <div class="wishlist-icon" onclick="toggleWishlist(this)">
                        <i class="fas fa-heart"></i>
                    </div>
                    <img src="${product.image}" alt="${product.name}" class="card-img">
                    <div class="card-body">
                        <div class="card-title">${product.name}</div>
                        <div class="card-price">
                            <span>₹${product.price}</span>
                            <span class="discount">${discount}% OFF</span>
                        </div>
                        <div class="original-price">₹${product.original}</div>
                        <button class="add-btn" onclick="addToCart(${product.id})">Add to Cart</button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        // --- Filter Logic ---
        function filterProducts(category) {
            currentFilter = category;
            
            // Update active button styling
            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            if (category === 'all') {
                renderProducts(products);
            } else {
                const filtered = products.filter(p => p.category === category);
                renderProducts(filtered);
            }
        }

        // --- Cart Logic ---
        function addToCart(id) {
            const product = products.find(p => p.id === id);
            const existingItem = cart.find(item => item.id === id);

            if (existingItem) {
                existingItem.quantity++;
            } else {
                cart.push({ ...product, quantity: 1 });
            }

            updateCartUI();
            showToast(`${product.name} added to cart!`, 'success');
            
            // Open drawer automatically on first add
            if(cart.length === 1 && cart[0].quantity === 1) {
                // Optional: toggleCart(); 
            }
        }

        function removeFromCart(id) {
            cart = cart.filter(item => item.id !== id);
            updateCartUI();
        }

        function updateCartUI() {
            const cartContainer = document.getElementById('cartItemsContainer');
            const cartCount = document.getElementById('cartCount');
            const cartTotal = document.getElementById('cartTotal');

            // Update Count
            const totalCount = cart.reduce((sum, item) => sum + item.quantity, 0);
            cartCount.innerText = totalCount;

            // Update Total
            const totalAmount = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            cartTotal.innerText = `₹${totalAmount}`;

            // Render Items
            if (cart.length === 0) {
                cartContainer.innerHTML = '<p style="text-align: center; margin-top: 20px; color: #999;">Your cart is empty</p>';
            } else {
                cartContainer.innerHTML = cart.map(item => `
                    <div class="cart-item">
                        <img src="${item.image}" alt="${item.name}">
                        <div class="cart-item-details">
                            <h4>${item.name}</h4>
                            <p>₹${item.price} x ${item.quantity}</p>
                            <small style="color:red; cursor:pointer;" onclick="removeFromCart(${item.id})">Remove</small>
                        </div>
                    </div>
                `).join('');
            }
        }

        function toggleCart() {
            const drawer = document.getElementById('cartDrawer');
            const overlay = document.getElementById('overlay');
            drawer.classList.toggle('open');
            overlay.classList.toggle('active');
        }

        function checkout() {
            if (cart.length === 0) {
                showToast("Cart is empty!", "error");
                return;
            }
            showToast("Processing Order...", "success");
            setTimeout(() => {
                cart = [];
                updateCartUI();
                toggleCart();
                showToast("Order Placed Successfully!", "success");
            }, 1500);
        }

        // --- Modal Logic ---
        function openModal(id) {
            const product = products.find(p => p.id === id);
            document.getElementById('modalImg').src = product.image;
            document.getElementById('modalTitle').innerText = product.name;
            document.getElementById('modalPrice').innerText = `₹${product.price}`;
            document.getElementById('modalDesc').innerText = product.desc;
            
            // Bind add button in modal
            const btn = document.getElementById('modalAddBtn');
            btn.onclick = () => {
                addToCart(product.id);
                closeModal();
            };

            document.getElementById('productModal').style.display = 'flex';
            document.getElementById('overlay').classList.add('active');
        }

        function closeModal() {
            document.getElementById('productModal').style.display = 'none';
            // Only remove overlay if cart is closed too
            if(!document.getElementById('cartDrawer').classList.contains('open')) {
                document.getElementById('overlay').classList.remove('active');
            }
        }

        function closeAll() {
            document.getElementById('cartDrawer').classList.remove('open');
            closeModal();
            document.getElementById('overlay').classList.remove('active');
        }

        // --- Unique Feature: Seller Mode Toggle ---
        function toggleMode(isSeller) {
            const root = document.documentElement;
            const heroTitle = document.getElementById('heroTitle');
            const heroSubtitle = document.getElementById('heroSubtitle');

            if (isSeller) {
                root.setAttribute('data-theme', 'seller');
                heroTitle.innerText = "Start Your Business Today!";
                heroSubtitle.innerText = "Earn 0% commission on your first 10 sales.";
                showToast("Switched to Seller Mode", "success");
            } else {
                root.removeAttribute('data-theme');
                heroTitle.innerText = "Big Billion Days Sale!";
                heroSubtitle.innerText = "Get up to 80% off on top brands.";
                showToast("Switched to Buyer Mode", "success");
            }
        }

        // --- Utility: Toast Notification ---
        function showToast(message, type = 'normal') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            
            let icon = type === 'success' ? 'check-circle' : (type === 'error' ? 'exclamation-circle' : 'info-circle');
            
            toast.innerHTML = `<i class="fas fa-${icon}"></i> ${message}`;
            container.appendChild(toast);

            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // --- Utility: Wishlist Toggle ---
        function toggleWishlist(element) {
            element.classList.toggle('active');
            if(element.classList.contains('active')) {
                showToast("Added to Wishlist", "success");
            } else {
                showToast("Removed from Wishlist", "normal");
            }
        }

        // --- Utility: Countdown Timer ---
        function startCountdown() {
            let time = 4 * 3600 + 23 * 60 + 15; // 4h 23m 15s
            const timerElement = document.getElementById('countdown');

            setInterval(() => {
                time--;
                if (time < 0) time = 4 * 3600; // Reset loop

                const h = Math.floor(time / 3600);
                const m = Math.floor((time % 3600) / 60);
                const s = time % 60;

                timerElement.innerText = `${h.toString().padStart(2, '0')}:${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
            }, 1000);
        }
    </script>
</body>
</html>
