  <!-- JAVASCRIPT -->
  <script>
    // Update copyright year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Elements
    const loginOverlay = document.getElementById("loginOverlay");
    const openLoginBtn = document.getElementById("openLoginBtn");
    const openLoginBtn2 = document.getElementById("openLoginBtn2");
    const loginClose = document.getElementById("loginClose");
    const loginForm = document.getElementById("loginForm");
    const loginStatus = document.getElementById("loginStatus");
    const contactForm = document.getElementById("contactForm");
    const formStatus = document.getElementById("formStatus");
    const scrollFeaturesBtn = document.getElementById("scrollFeatures");

    // Open login modal
    openLoginBtn.addEventListener("click", () => {
      loginOverlay.classList.add("open");
    });

    openLoginBtn2.addEventListener("click", () => {
      loginOverlay.classList.add("open");
    });

    // Close login modal
    loginClose.addEventListener("click", () => {
      loginOverlay.classList.remove("open");
      loginStatus.textContent = "";
      loginStatus.className = "login-status";
      loginForm.reset();
    });

    // Close modal on outside click
    loginOverlay.addEventListener("click", (e) => {
      if (e.target === loginOverlay) {
        loginOverlay.classList.remove("open");
        loginStatus.textContent = "";
        loginStatus.className = "login-status";
        loginForm.reset();
      }
    });

    // Simple client-side login demo (NOT SECURE, sirf demo)
    loginForm.addEventListener("submit", (e) => {
      e.preventDefault();

      const username = document.getElementById("username").value.trim();
      const password = document.getElementById("password").value.trim();

      if (username && password) {
        // Example: simple static check
        // Asli me ye backend + database hota hai.
        loginStatus.textContent = "Login successful! (demo only)";
        loginStatus.className = "login-status success";

        setTimeout(() => {
          loginOverlay.classList.remove("open");
          loginStatus.textContent = "";
          loginStatus.className = "login-status";
          loginForm.reset();
        }, 1500);
      } else {
        loginStatus.textContent = "Username aur password daalo.";
        loginStatus.className = "login-status error";
      }
    });

    // Contact form demo (backend nahi hai, sirf UI demo)
    contactForm.addEventListener("submit", (e) => {
      e.preventDefault();
      formStatus.textContent = "Message bhej diya gaya (demo – backend nahi lagaya hai).";
      setTimeout(() => {
        formStatus.textContent = "";
        contactForm.reset();
      }, 3000);
    });

    // Scroll to features
    scrollFeaturesBtn.addEventListener("click", () => {
      document.getElementById("features").scrollIntoView({ behavior: "smooth" });
    });
  </script>
</body>
