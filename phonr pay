<body>

    <div class="scanline"></div>

    <div class="terminal-window" id="console">
        <div class="log-entry">INITIALIZING SYSTEM...</div>
        <div class="log-entry">LOADING KERNEL...</div>
        <div class="log-entry">CONNECTION ESTABLISHED.</div>
        <div class="log entry">WAITING FOR INPUT...</div>
        <br>
    </div>

    <div class="controls">
        <button onclick="startHack()">Start Attack</button>
        <button onclick="stopHack()">Abort</button>
        <button onclick="clearConsole()">Clear Log</button>
    </div>

    <script>
        const consoleDiv = document.getElementById('console');
        let hackInterval;
        let isHacking = false;

        // Random fake technical text (Gibberish)
        const hackData = [
            "Bypassing firewall port 8080...",
            "Injecting SQL payload...",
            "Accessing mainframe...",
            "Decrypting password hash...",
            "Downloading user_data.db...",
            "Trace route complete: 192.168.1.X",
            "Bypassing proxy server...",
            "Uploading virus.exe...",
            "Overwriting security logs...",
            " brute_force_attack.exe running...",
            "Attempting root access...",
            "Connecting to satellite...",
            "GPS coordinates locked...",
            "Decrypting WhatsApp database...",
            "Access granted: ADMIN_LEVEL_5",
            "Uploading backdoor...",
            "Packet sniffing initiated..."
        ];

        function addLog(text, type = '') {
            const div = document.createElement('div');
            div.className = `log-entry ${type}`;
            
            // Add timestamp
            const time = new Date().toLocaleTimeString('en-US', {hour12: false});
            div.innerText = `[${time}] > ${text}`;
            
            consoleDiv.appendChild(div);
            
            // Auto scroll to bottom
            consoleDiv.scrollTop = consoleDiv.scrollHeight;
        }

        function startHack() {
            if (isHacking) return;
            isHacking = true;
            addLog("INITIATING HACKING SEQUENCE...", "success");

            hackInterval = setInterval(() => {
                // Pick random text
                const randomText = hackData[Math.floor(Math.random() * hackData.length)];
                const randomType = Math.random() > 0.9 ? 'error' : (Math.random() > 0.8 ? 'warning' : '');
                
                addLog(randomText, randomType);

                // Randomly add binary code
                if(Math.random() > 0.7) {
                    addLog(generateBinary(), '');
                }

                // Randomly show "Success" message
                if(Math.random() > 0.95) {
                    addLog("TARGET COMPROMISED SUCCESSFULLY!", "success");
                }

            }, 100); // Speed (lower is faster)
        }

        function stopHack() {
            clearInterval(hackInterval);
            isHacking = false;
            addLog("PROCESS ABORTED BY USER.", "error");
        }

        function clearConsole() {
            consoleDiv.innerHTML = '';
            addLog("CONSOLE CLEARED.");
        }

        function generateBinary() {
            let bin = "";
            for(let i=0; i<20; i++) {
                bin += Math.round(Math.random());
            }
            return "DATA_STREAM: " + bin;
        }

        // Welcome message
        setTimeout(() => {
            addLog("Welcome to CyberTerminal v2.0");
            addLog("Target: Mobile Device");
            addLog("Status: Ready to infiltrate");
        }, 500);

    </script>
